<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chq.uicopy.bnavi.BNaviMainActivity">
    <Button
        android:id="@+id/btnDesign"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="design扩展"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnWeChat"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnDesign"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="仿微信"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnQQ"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnWeChat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="仿QQ"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
